---
title: Transparencia
description: "Review feature info and customization details."
---
<html>
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{{title}}</title>
    <link rel="icon" href="{{ '/favicon.png' | url }}" />
    <link href="{{ '/assets/css/style.css' | url }}" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.css" integrity="sha512-/zs32ZEJh+/EO2N1b0PEdoA10JkdC3zJ8L5FTiQu82LR9S/rOQNfQN7U59U9BC12swNeRAz3HSzIL2vpp4fv3w==" crossorigin="anonymous" />
</head>
<body onload="init()">
    <div class="w-100 d-flex">
        <div class="col-12 mb-2 p-0">
            <div class="bg-white w-100 row m-0 p-0">
                <div class="col-12 bg-secondary py-2 px-3 d-flex">
                    <h4 class="text-white m-0 font-weight-normal" id="titleTematicaContainer">
                        {{title}}
                    </h4>
        
                    <!-- Button trigger modal -->
                    <button type="button" class="btn bg-transparent border-0 text-white ml-auto my-auto d-none"
                        data-toggle="modal" data-target="#exampleModal">
                        Compartir gráfica
                    </button>
        
                    <!-- Modal -->
                    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                        aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">
                                        Compartir gráfica
                                    </h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <div class="bg-light p-1 mb-2">
                                        <code id="code-embed"></code>
                                    </div>
                                    <embed id="embed-embed"
                                        src="/chart/huehuetenango/san-rafael-la-independencia/rango-de-edad/" type="text/html"
                                        class="w-100" height="500b">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12 p-0">
                    <div class="w-100">
                    <div class="row m-0 p-0">
                        <div class="col-12 col-lg-3 p-2 px-3 border">
                        <h3>
                            Acceso a la información pública
                        </h3>
                        <h1 id="aip-promedio">
                            {{municipio.aip.aipPromedio}}%
                        </h1>
                        <small>
                            PDH 2019
                        </small>
                        </div>
                        <div class="col-12 col-lg-9 p-3 border">
                        <h6>
                            Indice de Acceso a la Información Pública
                        </h6>
                        <canvas height="120px" id="chart-transparencia-1"></canvas>
                        <small>Fuente: Procuraduría de Derechos Humanos (PDH)</small>
                        </div>
                    </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        async function init() {
            const urlParams = new URLSearchParams(location.search);

            if (!urlParams.get('municipio')) {
                document.getElementById('data-container').innerHTML = 'Es necesario especificar un municipio';
                document.getElementById('data-container').style.padding = '1.5rem';
                document.getElementById('data-container').classList = null;
                console.log('Es necesario indicar el id del municipio como query param "?municipio=101"');
                return;
            }

            var municipiosData;
            municipiosData = await fetch('/municipiosData.json').then((response) => {
                return response.json()
            })
            .then((json) => {
                return json;
            });

            var municipio;
            var municipioIdParam = parseInt(urlParams.get('municipio'));

            municipio = municipiosData.find((municipio) => {
                return municipio.idMunicipal === municipioIdParam;
            });

            if (!municipio) {
                document.getElementById('data-container').innerHTML = `Codigo ${urlParams.get('municipio')} de municipio no válido`;
                document.getElementById('data-container').style.padding = '1.5rem';
                document.getElementById('data-container').classList = null;
                console.log('Verificar lista de código de municipios');
                return;
            }

            window.municipio = municipio;

            document.getElementById('aip-promedio').innerHTML = municipio.aip.aipPromedio;

            window.chartConfigGestionTransparencia1
                .data
                .datasets[0]
                .data = [
                    window.municipio.ranking.segeplan2013,
                    window.municipio.ranking.segeplan2016,
                    window.municipio.ranking.segeplan2018
                ];

            window.chart1.update();
        }
    </script>
    {# ChartJS #}
    <script>
    (function(d, s, id){
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)){ return; }
        js = d.createElement(s); js.id = id;
        js.onload = function(){
            // CHARTJS STUFF
            var baseBarChartConfig = {
                "type": "bar",
                "data": {
                    "labels": [],
                    "datasets": [
                        {
                            "label": "",
                            "data": [],
                            "fill": false,
                            "backgroundColor": "#52CCAE",
                            "borderColor": "#52CCAE",
                            "borderWidth": 0
                        }
                    ]
                },
                "options": {
                    "scales": {
                        "xAxes": [
                            {
                                "display": true,
                                "gridLines": {
                                    "lineWidth": 1
                                }
                            }
                        ],
                        "yAxes": [
                            {
                                "display": true,
                                "lineWidth": 1,
                                "ticks": {
                                    "beginAtZero": true,
                                    "suggestedMax": 100
                                },
                                "gridLines": {
                                    "lineWidth": 1
                                }
                            }
                        ]
                    }
                }
            };
            // Transparencia
            let chartConfigGestionTransparencia1 = JSON.parse(JSON.stringify(baseBarChartConfig));
            chartConfigGestionTransparencia1
            .data
            .datasets[0]
            .label = "Indice de Acceso a la Información Pública";
            chartConfigGestionTransparencia1
            .data
            .datasets[0]
            .data = [{{municipio.aip.aip2015}}, {{municipio.aip.aip2017}}, {{municipio.aip.aip2019}}];
            chartConfigGestionTransparencia1.data.labels = ["2015", "2017", "2019"];
            window.chartConfigGestionTransparencia1 = chartConfigGestionTransparencia1;
            window.chart1 = new Chart(document.getElementById("chart-transparencia-1"), window.chartConfigGestionTransparencia1);
        };
        js.src = "https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.js";
        fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'chart-jssdk'));
    </script>
</body>
</html>